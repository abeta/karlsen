<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="name">
            <field name="car" type="custom" template="car.html" filter="string" />
        </fieldset>
        <fieldset name="general">
            <field name="features" type="multiform" filter="array" label="">
                <field name="feature" label="Feature" type="text" filter="string" class="form-control" />
            </field>
        </fieldset>
        <fieldset name="gallery">
            <field name="gallery" type="gallery" filter="array" label="Gallery" idfield="cid" path="_media/showroom" />
        </fieldset>
        <fieldset name="specifications">
            <field name="make_country" type="hidden" label="Country of Origin" filter="string" class="form-control" readonly="true" />
            <field name="make_display" type="text" label="Make" filter="string" class="form-control" readonly="true" />
            <field name="model_name" type="text" label="Model" filter="string" class="form-control" />
            <field name="model_trim" type="text" label="Trim" filter="string" class="form-control" />
            <field name="model_year" type="text" label="Year" filter="int" class="form-control" readonly="true" admintable="true" />

            <field name="model_body" type="text" label="Body Style" filter="string" class="form-control" />
            <field name="model_engine_position" type="text" label="Engine Location" filter="string" class="form-control" />
            <field name="model_engine_type" type="text" label="Engine Type" filter="string" class="form-control" />
            <field name="model_engine_cyl" type="text" label="Engine Cylinders" filter="int" class="form-control" />
            <field name="model_engine_cc" type="text" label="Engine Displacement (cc)" filter="int" class="form-control" />
            <field name="model_engine_l" type="text" label="Engine Displacement (l)" filter="double" class="form-control" />
            <!--field name="model_engine_ci" type="text" label="Engine Displacement (cubic inches)" filter="string" class="form-control" /-->
            <field name="model_engine_bore_mm" type="text" label="Engine Bore (mm)" filter="int" class="form-control" />
            <!--field name="model_engine_bore_in" type="text" label="Engine Bore (in)" filter="double" class="form-control" /-->
            <field name="model_engine_stroke_mm" type="text" label="Engine Stroke (mm)" filter="int" class="form-control" />
            <!--field name="model_engine_stroke_in" type="text" label="Engine Stroke (in)" filter="double" class="form-control" /-->
            <!--field name="model_engine_valves_per_cyl" type="text" label="Engine Valves Per Cylinder" filter="int" class="form-control" /-->
            <field name="model_engine_valves" type="text" label="Engine Valves" filter="int" class="form-control" />
            <field name="model_engine_power_hp" type="text" label="Engine Max Power (HP)" filter="int" class="form-control" />
            <!--field name="model_engine_power_ps" type="text" label="Engine Max Power (PS)" filter="string" class="form-control" /-->
            <!--field name="model_engine_power_kw" type="text" label="Engine Max Power (kW)" filter="string" class="form-control" /-->
            <field name="model_engine_power_rpm" type="text" label="Engine Max Power RPM" filter="int" class="form-control" />
            <field name="model_engine_torque_nm" type="text" label="Engine Max Torque (Nm)" filter="string" class="form-control" />
            <field name="model_engine_torque_lbft" type="text" label="Engine Max Torque (Lb-Ft)" filter="string" class="form-control" />
            <!--field name="model_engine_torque_kgm" type="text" label="Engine Max Torque (kgf-m)" filter="string" class="form-control /-->
            <field name="model_engine_torque_rpm" type="text" label="Engine Max Torque RPM" filter="string" class="form-control" />
            <field name="model_engine_compression" type="text" label="Engine Compression Ratio" filter="string" class="form-control" />
            <field name="model_engine_fuel" type="text" label="Engine Fuel Type" filter="string" class="form-control" />

            <field name="model_drive" type="text" label="Drive" filter="string" class="form-control" />
            <field name="model_transmission_type" type="text" label="Transmission Type" filter="string" class="form-control" />
            <!--field name="model_top_speed_kph" type="text" label="Top Speed (KPH)" filter="string" class="form-control" /-->
            <field name="model_top_speed_mph" type="text" label="Top Speed (MPH)" filter="int" class="form-control" />
            <field name="model_0_to_100_kph" type="text" label="0-100 kph (0-62mph)" filter="double" class="form-control" />

            <field name="model_doors" type="text" label="Doors" filter="int" class="form-control" />
            <field name="model_seats" type="text" label="Seats" filter="int" class="form-control" />
            <field name="model_weight_kg" type="text" label="Weight (kg)" filter="double" class="form-control" />
            <!--field name="model_weight_lbs" type="text" label="Weight (lbs)" filter="double" class="form-control" /-->
            <field name="model_length_mm" type="text" label="Length (mm)" filter="int" class="form-control" />
            <!--field name="model_length_in" type="text" label="Length (in)" filter="double" class="form-control" /-->
            <field name="model_width_mm" type="text" label="Width (mm)" filter="int" class="form-control" />
            <!--field name="model_width_in" type="text" label="Width (in)" filter="double" class="form-control" /-->
            <field name="model_height_mm" type="text" label="Height (mm)" filter="int" class="form-control" />
            <!--field name="model_height_in" type="text" label="Height (in)" filter="double" class="form-control" /-->
            <field name="model_wheelbase_mm" type="text" label="Wheelbase (mm)" filter="int" class="form-control" />
            <!--field name="model_wheelbase_in" type="text" label="Wheelbase (in)" filter="double" class="form-control" /-->
            <field name="model_lkm_city" type="text" label="Fuel Economy City (l/100km)" filter="double" class="form-control" />
            <!--field name="model_mpg_city" type="text" label="Fuel Economy City (mpg)" filter="string" class="form-control" /-->
            <field name="model_lkm_hwy" type="text" label="Fuel Economy HWY (l/100km)" filter="double" class="form-control" />
            <!--field name="model_mpg_hwy" type="text" label="Fuel Economy HWY (mpg)" filter="string" class="form-control" /-->
            <field name="model_lkm_mixed" type="text" label="Fuel Economy Mixed (l/100km)" filter="double" class="form-control" />
            <!--field name="model_mpg_mixed" type="text" label="Fuel Economy Mixed (mpg)" filter="string" class="form-control" /-->
            <field name="model_fuel_cap_l" type="text" label="Fuel Capacity (l)" filter="double" class="form-control" />
            <!--field name="model_fuel_cap_g" type="text" label="Fuel Capacity (g)" filter="double" class="form-control" /-->
        </fieldset>
        <fieldset name="options">
            <field name="status" type="list" label="Status" class="form-control">
                <option value="for-sale">For Sale</option>
                <option value="under-offer">Under Offer</option>
                <option value="sold">Sold</option>
            </field>
            <field name="price" type="text" label="Price" filter="integer" class="form-control" admintable="true" />
            <field name="mileage" type="text" label="Mileage" filter="integer" class="form-control" />
            <field name="colour" type="list" label="Colour" class="form-control">
                <option value=""></option>
                <option value="beige">Beige</option>
                <option value="black">Black</option>
                <option value="blue">Blue</option>
                <option value="bronze">Bronze</option>
                <option value="brown">Brown</option>
                <option value="burgundy">Burgundy</option>
                <option value="gold">Gold</option>
                <option value="green">Green</option>
                <option value="grey">Grey</option>
                <option value="indigo">Indigo</option>
                <option value="magenta">Magenta</option>
                <option value="maroon">Maroon</option>
                <option value="multicolour">Multicolour</option>
                <option value="navy">Navy</option>
                <option value="orange">Orange</option>
                <option value="pink">Pink</option>
                <option value="purple">Purple</option>
                <option value="red">Red</option>
                <option value="silver">Silver</option>
                <option value="turquoise">Turquoise</option>
                <option value="white">White</option>
                <option value="yellow">Yellow</option>
                <option value="unlisted">Unlisted</option>
            </field>
            <field name="title" type="hidden" filter="string" admintable="true" parse="{{make_display}} {{model_name}}{% if model_trim %} {{model_trim}}{% endif %}" />
            <field name="slug" type="hidden" parse="{{cid}}-{{title | slugify}}" />
            <field name="image" type="hidden" parse="{{gallery[0].src}}" />
            <field name="cid" type="uuid" uuid="ai" filter="integer" />
            <field name="created" type="hidden" parse="{{created | default('now' | date('c'))}}" />
        </fieldset>
    </fields>
</form>
